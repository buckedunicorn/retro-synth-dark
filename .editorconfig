# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation
indent_style = space
indent_size = 2

# Markdown files: don't trim trailing whitespace (for line breaks)
[*.md]
trim_trailing_whitespace = false

# JSON files: 2 spaces
[*.json]
indent_style = space
indent_size = 2

# YAML files: 2 spaces
[*.yml]
[*.yaml]
indent_style = space
indent_size = 2

# Python files: 4 spaces
[*.py]
indent_style = space
indent_size = 4

# Go files: tabs
[*.go]
indent_style = tab

# Makefiles: tabs
[Makefile]
indent_style
